<!DOCTYPE html>
<html>
  <head>
    <title>BackendProject2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>


  <body>

    <header>
      <% if @current_user.present? %>
      <nav class="navContainer">
        <div class = "welcome">
          Welcome back, <%= @current_user.name %>
        </div>
        <div class="navLinkIn">
          <%= link_to 'Challenges', challenges_path , class: "navLink challenges"  %>

          <%= link_to 'Profile', user_path(@current_user.id) , class: "navLink profile"  %>
          <%= link_to 'Logout', login_path, method: 'delete', class: "navLink logout"  %>
        </div>
      </nav>
      <% else %>
      <nav class="navContainer">
        <div class="navLinkOut">
          <%= link_to 'Challenges', challenges_path , class: "navLink profile"  %>
          <%= link_to 'Signup', new_user_path, class: "navLink signup" %>
          <%= link_to 'Login', login_path, class: "navLink login" %>
        </div>
      </nav>
      <% end %>
    </header>

    <main>
      <%= yield %>
    </main>


    

      <main>
        <%= yield %>
      </main>

  </body>
</html>
