<div class="grid-Container">
  <div class="challenge-info">
    <h2><a href="/challenges/<%= @challenge.id %>"><%= @challenge.name %></a> </h2>
    <p><%= @challenge.description %></p>
  </div>
  <div class="code-textarea">
    <textarea name="code" class="codearea" id="editor"><%= @solution.code %></textarea>
  </div>
  <div class="results">
    <button type="button" name="button" onClick='on_click()'>Run Code</button>
    <div></div>
  </div>
</div>

<script>
  let editor;
  $(document).ready(function(){
    let myTextArea = $('.codearea')[0];
    editor = CodeMirror.fromTextArea( myTextArea, {
      value: myTextArea.value,
      theme: 'neat',
      lineNumbers: true,
      readOnly: true,});
      let funk;
  });

  const on_click = () => {
    let js = editor.getValue();
    let s = document.createElement('script');
    s.textContent = `funk = arr => {
      ${js}
    }`;
    document.body.appendChild(s);
    funk("hello world");
    s.remove()
  }

</script>


<% @solution.comments.each do |comment| %>

  <div class="comment">
  <h6><%= comment.user.name %>
  says:</h6>
  <%= simple_format(comment.body) %>

  </div>
    <% end %>


<%= form_tag comments_path do  %>
    leave a <%= label_tag :Comment %>: <br>
      <%= text_area_tag :body %> <br>
    <%= hidden_field_tag :solution_id,"#{@solution.id}" %>
    <br>
    <%= submit_tag "Post comment"%>
    <% end  %>
